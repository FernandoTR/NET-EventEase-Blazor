@page "/events/{Id:int}"
@using EventEase.Models
@inject NavigationManager NavManager

<h2>Detalles del evento</h2>

@if (eventDetails != null)
{
    <p><strong>Nombre:</strong> @eventDetails.Name</p>
    <p><strong>Fecha:</strong> @eventDetails.Date.ToString("dd/MM/yyyy")</p>
    <p><strong>Ubicación:</strong> @eventDetails.Location</p>
}
else
{
    <p>Evento no encontrado.</p>
    <button class="btn btn-secondary" @onclick="GoBack">Volver</button>
}

@code {
    [Parameter] public int Id { get; set; }

    private Event? eventDetails;

    private List<Event> events = new List<Event>
    {
        new Event { Id = 1, Name = "Conferencia Tech", Date = DateTime.Now.AddDays(10), Location = "CDMX" },
        new Event { Id = 2, Name = "Networking Empresarial", Date = DateTime.Now.AddDays(15), Location = "Guadalajara" },
        new Event { Id = 3, Name = "Feria de Innovación", Date = DateTime.Now.AddDays(20), Location = "Monterrey" }
    };

    protected override void OnInitialized()
    {
        eventDetails = events.FirstOrDefault(e => e.Id == Id);
    }

    private void GoBack()
    {
        NavManager.NavigateTo("/events");
    }
}
